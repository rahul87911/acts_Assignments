doctype html
html(lang="en")
  head
    title #{title}
    link(rel='stylesheet' href='/css/mystyle.css')
  body
    a(href='/') Home
    h1 Add Employee Details
    form(method="POST" action="/adddata")
      table
        tr
          td
            label Id:
          td
            input(name="keyid" type="text" placeholder="Id")
        tr
          td
            label Employee Id:
          td
            input(name="eid" type="text" placeholder="Employee Id")
          td
            label Name
          td
            input(name="name" type="text" placeholder="Name")
        tr
          td
            label Salary
          td
            input(name="sal" type="text" placeholder="Salary")
        tr
          td(colspan="2" align="center")
            input(type="submit" value="Add Employee")
